<h1>List of Articles</h1>

<div class="container">
  <ul>
    <% @articles.each do |article| %>
     <li>
      <%= link_to article.title, article_path(article), class: 'title' %> <br>
       <br>
     <%= article.content %> <br>
     <br>

      <%= link_to article_path(article), class: 'deleted', method: :delete, data: {confirm: "Are you sure?" } do %>
      <i class="fa fa-trash-o"></i>
      <% end %>

    </li>

    <% end %>
  </ul>
</div>

<%= link_to "Add a new article", new_article_path(@articles) %>
